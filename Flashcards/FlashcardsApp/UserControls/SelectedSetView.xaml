<UserControl x:Class="FlashcardsApp.UserControls.SelectedSetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <StackPanel>
        <Grid>
            <Button Style="{StaticResource CSButtons}"
                    BorderThickness="0"
                    Background="#FF483D8B"
                    Height="50"
                    Width="120"
                    Foreground="White"
                    FontSize="20"
                    Margin="20 0 0 0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    Content="Mix words"
                    Padding="10"
                    Command="{Binding MixWordsCommand}" />

            <TextBlock Text="{Binding Count}"
                       Foreground="AliceBlue"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Center"
                       FontSize="20"
                       Margin="0 0 0 0" />

            <Button Style="{StaticResource CSButtons}"
                    BorderThickness="0"
                    Background="#FF483D8B"
                    Height="50"
                    Width="80"
                    Foreground="White"
                    FontSize="20"
                    Margin="0 0 100 0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    Content="Edit"
                    Padding="10"
                    Command="{Binding EditCommand}" />

            <Button Style="{StaticResource CSButtons}"
                    BorderThickness="0"
                    Background="#FF483D8B"
                    Height="50"
                    Width="80"
                    Foreground="White"
                    FontSize="20"
                    Margin="0 0 10 0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Center"
                    Content="Delete"
                    Padding="10"
                    Command="{Binding DeleteWordCommand}" />
        </Grid>

        <Ellipse Width="30"
                 Height="30"
                 Fill="{Binding ColorFav}"
                 Margin="0 10 0 0" />

        <TextBlock Text="{Binding WordName}"
                   Foreground="AliceBlue"
                   HorizontalAlignment="Center"
                   FontSize="40"
                   Margin="0 10 0 0"
                   Visibility="{Binding IsVisibleWord}" />

        <TextBlock Text="{Binding DefinitionName}"
                   Foreground="AliceBlue"
                   HorizontalAlignment="Center"
                   FontSize="40"
                   Margin="0 0 0 20"
                   Visibility="{Binding IsVisibleDef}"
                   TextWrapping="Wrap" />

        <Image x:Name="Image"
               Source="{Binding Image}"
               Visibility="{Binding IsVisibleImage}"
               MaxHeight="450"
               MaxWidth="800" />
    </StackPanel>
</UserControl>