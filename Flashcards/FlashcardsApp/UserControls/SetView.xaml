<UserControl x:Class="FlashcardsApp.UserControls.SetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="500">
    <Border Background="#272544"
            HorizontalAlignment="Center">
        <Grid Width="650">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="160" />
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>

            <Button Style="{DynamicResource SetButton}"
                    Command="{Binding SelectSetCommand}"
                    Margin="0 0 0 0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBlock Text="{Binding NameOfSet}"
                               HorizontalAlignment="Center"
                               Margin="0 0 0 10" />
                    <TextBlock Grid.Row="1"
                               Text="{Binding NumOfWordsString}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Grid>
            </Button>

            <Grid Grid.Column="1">

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal"
                            Grid.Row="0">

                    <TextBlock Text="Hide Def"
                               Margin="8 30 5 0"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Left"
                               Foreground="White"
                               FontSize="12" />
                    
                    <CheckBox Style="{DynamicResource ToggleButton}"
                              Margin="0 30 0 0"
                              VerticalAlignment="Top"
                              HorizontalAlignment="Center"
                              IsChecked="{Binding IsChecked}" />
                    
                    <TextBlock Text="Hide Word"
                               Margin="5 30 0 0"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Right"
                               Foreground="White"
                               FontSize="12" />

                </StackPanel>

                <Button Style="{StaticResource CSButtons}"
                        BorderThickness="0"
                        Background="#FF483D8B"
                        Height="70"
                        Width="150"
                        Margin="0 0 0 0"
                        HorizontalContentAlignment="Center"
                        Command="{Binding SelectFavWordsCommand}"
                        Grid.Row="1">
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock Text="Only Favorite"
                                   Margin="0 0 0 0"
                                   Foreground="White"
                                   FontSize="20"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Padding="10 10 10 5" />

                        <StackPanel Orientation="Horizontal"
                                    Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">

                            <TextBlock Text="{Binding NumOfFavWords}"
                                       Margin="0 0 0 0"
                                       Foreground="White"
                                       FontSize="20"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Stretch" />

                            <TextBlock Text=" words"
                                       Margin="0 0 0 0"
                                       Foreground="White"
                                       FontSize="20"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Stretch" />

                        </StackPanel>

                    </Grid>
                </Button>

                <Button Style="{StaticResource CSButtons}"
                        BorderThickness="0"
                        Background="#FF483D8B"
                        Grid.Column="2"
                        Height="55"
                        Width="150"
                        Margin="0 5 0 0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        VerticalAlignment="Top"
                        Command="{Binding DeleteAllFavoriteCommand}"
                        Grid.Row="2">

                    <TextBlock Text="Delete All Favorite Words"
                               Margin="0 0 0 0"
                               Foreground="White"
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Padding="10 10 10 5"
                               TextWrapping="Wrap" />
                </Button>
            </Grid>


            <Grid Grid.Column="2">

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="65" />
                </Grid.RowDefinitions>

                <Button Style="{StaticResource CSButtons}"
                        BorderThickness="0"
                        Background="#FF483D8B"
                        Grid.Column="2"
                        Height="70"
                        Width="150"
                        Margin="5 0 0 0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        VerticalAlignment="Bottom"
                        Command="{Binding AddToFavInRangeCommand}">

                    <TextBlock Text="Add or Delete Favorite in Range"
                               Margin="0 0 0 0"
                               Foreground="White"
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Padding="10 10 10 5"
                               TextWrapping="Wrap" />

                </Button>

                <TextBox Grid.Row="1"
                         Text="{Binding RangeStart, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}"
                         Height="30"
                         Width="50"
                         Background="Transparent"
                         Foreground="AliceBlue"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         FontSize="20"
                         Margin="0 10 80 0"
                         BorderThickness="0.2" />

                <TextBox Grid.Row="1"
                         Text="{Binding RangeEnd, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}"
                         Height="30"
                         Width="50"
                         Background="Transparent"
                         Foreground="AliceBlue"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         FontSize="20"
                         Margin="50 10 0 0"
                         BorderThickness="0.2" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
