<UserControl x:Class="Flashcards.App.UserControls.CreateSetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Flashcards.ViewModels.UserControls;assembly=Flashcards.ViewModels"
             d:DataContext="{d:DesignInstance vm:CreateSetViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="800">

    <StackPanel Margin="0 30 0 0">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Text="Set creation"
                       Style="{StaticResource TextBlock}"
                       Grid.Row="0"
                       Grid.Column="1" />

            <TextBox Style="{StaticResource TextBox}"
                     Text="{Binding Set,
                                    UpdateSourceTrigger=PropertyChanged}"
                     MaxLength="2"
                     Grid.Row="1"
                     Grid.Column="1"
                     MinWidth="80" />

            <Button Command="{Binding CreateSetCommand,
                                      Mode=OneWay,
                                      Source={StaticResource mainVM}}"
                    CommandParameter="{Binding}"
                    Content="Create only set"
                    Style="{StaticResource CSButtons}"
                    Grid.Row="1"
                    Grid.Column="2"
                    HorizontalAlignment="Left"
                    Margin="0 0 0 15" />

            <TextBlock Text="Word"
                       Style="{StaticResource TextBlock}"
                       Grid.Row="2"
                       Grid.Column="1" />

            <TextBox Style="{StaticResource TextBox}"
                     Text="{Binding Word,
                                    UpdateSourceTrigger=PropertyChanged}"
                     Grid.Row="4"
                     Grid.Column="1" />

            <Image Source="/wwwroot/Images/ex.png"
                   Height="40"
                   Width="40"
                   Grid.Row="4"
                   Grid.Column="2"
                   HorizontalAlignment="Left"
                   Margin="0 0 0 15" />
            <!--TODO Для Image выше нужен функционал, см в главной модели метод CheckWordIfExists-->

            <TextBlock Text="Definition"
                       Style="{StaticResource TextBlock}"
                       Grid.Row="5"
                       Grid.Column="1" />

            <TextBox Style="{StaticResource TextBox}"
                     Text="{Binding Definition}"
                     Grid.Row="6"
                     Grid.ColumnSpan="3" />

            <Button Style="{StaticResource CSButtons}"
                    Content="Path to the Image"
                    Command="{Binding FindImageCommand}"
                    Grid.Row="7"
                    Grid.Column="1" />

            <Image Source="/wwwroot/Images/ok.png"
                   Height="50"
                   Width="50"
                   Margin="0 0 0 15"
                   Grid.Row="7"
                   Grid.Column="2"
                   HorizontalAlignment="Left">
                <Image.Style>
                    <Style TargetType="Image">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ImagePath}"
                                         Value="{x:Null}">
                                <Setter Property="Visibility"
                                        Value="Hidden" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>

            <Button Content="Save the word"
                    Command="{Binding SaveWordCommand,
                                  Mode=OneWay,
                                  Source={StaticResource mainVM}}"
                    Style="{StaticResource CSButtons}"
                    CommandParameter="{Binding}"
                    Width="1"
                    Grid.Row="8"
                    Grid.Column="1" />
        </Grid>
    </StackPanel>
</UserControl>